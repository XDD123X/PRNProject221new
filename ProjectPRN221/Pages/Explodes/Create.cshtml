@page
@model ProjectPRN221.Pages.Explodes.CreateModel

@{
    ViewData["Title"] = "Create Explode";
}

<h1>Create Explode</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Explode.Title" class="form-label">Title</label>
        <input asp-for="Explode.Title" class="form-control" />
        <span asp-validation-for="Explode.Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Explode.Video" class="form-label">Video URL</label>
        <input asp-for="Explode.Video" class="form-control" />
        <span asp-validation-for="Explode.Video" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-primary">Create</button>
</form>

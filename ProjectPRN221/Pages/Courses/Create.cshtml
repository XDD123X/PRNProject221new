@page
@model ProjectPRN221.Pages.Courses.CreateModel

@{
    ViewData["Title"] = "Create Course";
}

<section class="pb-11 pt-7 bg-600">
    <div class="container mb-4">
        <div class="row">
            <div class="col-12 text-right">
                @if (Model.CurrentUser.Role == "Lecture")
                {
                    <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Course.Id" onsubmit="return confirm('Are you sure you want to delete this course?');" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                }
                <a asp-page="./Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </div>
    </div>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <form method="post">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Course.Title" class="form-label">Title</label>
                        <input asp-for="Course.Title" class="form-control" />
                        <span asp-validation-for="Course.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Course.Thumbnail" class="form-label">Thumbnail URL</label>
                        <input asp-for="Course.Thumbnail" class="form-control" />
                        <span asp-validation-for="Course.Thumbnail" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Course.Description" class="form-label">Description</label>
                        <textarea asp-for="Course.Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Course.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Explodes Section -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="font-sans-serif fw-bold fs-md-0 fs-lg-1">Manage Explodes</h5>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-page-handler="AddExplode">
                                <div class="mb-3">
                                    <label asp-for="NewExplode.Title" class="form-label">Explode Title</label>
                                    <input asp-for="NewExplode.Title" class="form-control" />
                                    <span asp-validation-for="NewExplode.Title" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="NewExplode.Video" class="form-label">YouTube Video ID</label>
                                    <input asp-for="NewExplode.Video" class="form-control" />
                                    <span asp-validation-for="NewExplode.Video" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="Course.Id" />
                                <button type="submit" class="btn btn-primary">Add Explode</button>
                            </form>

                            <ul class="list-unstyled mt-4">
                                @foreach (var explode in Model.Course.Explodes)
                                {
                                    <li class="mb-3">
                                        <i class="fas fa-plus text-info me-2" onclick="showVideo('@explode.Id')"></i>
                                        <a asp-page="/Explodes/Details" asp-route-eid="@explode.Id" asp-route-cid="@Model.Course.Id">@explode.Title</a>
                                        <div id="video-@explode.Id" class="video-container" style="display:none;">
                                            <iframe width="320" height="240" src="https://www.youtube.com/embed/@explode.Video" frameborder="0" allowfullscreen></iframe>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col">
                    <button type="submit" class="btn btn-primary">Save Course</button>
                </div>
            </div>
        </form>
    </div>
</section>

<script>
    function showVideo(explodeId) {
        var videoContainer = document.getElementById('video-' + explodeId);
        if (videoContainer.style.display === "none" || videoContainer.style.display === "") {
            videoContainer.style.display = "block";
        } else {
            videoContainer.style.display = "none";
        }
    }
</script>
